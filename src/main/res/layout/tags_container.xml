<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_lvl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/poinila_frame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/border_thin">

        <include layout="@layout/title_arrow_divider"/>

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            lib:layoutDirection="rtl"
            android:padding="@dimen/padding_lvlhalf"
            android:gravity="right"
            android:layout_below="@id/divider">
        </org.apmem.tools.layouts.FlowLayout>
    </RelativeLayout>
</FrameLayout>