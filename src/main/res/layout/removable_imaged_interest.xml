<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/interest_item">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/interest_frame"
        android:padding="@dimen/border_thin"
        android:layout_marginLeft="@dimen/margin_lvl1"
        android:layout_marginRight="@dimen/margin_lvl1"
        android:layout_marginTop="@dimen/margin_lvl1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_container">

            <include layout="@layout/tag_image"
                android:id="@+id/image" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/medium_text"
            android:textColor="@color/poinila_light_gray"
            android:id="@+id/tag"
            android:layout_below="@id/image_container"
            android:layout_marginTop="@dimen/margin_lvlhalf"
            android:layout_marginRight="@dimen/margin_lvl1"
            android:layout_marginBottom="@dimen/margin_lvlhalf"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="@dimen/columned_icon_small"
        android:layout_height="@dimen/columned_icon_small"
        android:scaleType="centerInside"
        android:src="@drawable/close"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />


</RelativeLayout>