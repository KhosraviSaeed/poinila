<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/page_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="@string/default_anonymous_message"
        android:paddingLeft="@dimen/padding_lvl2"
        android:paddingRight="@dimen/padding_lvl2"
        android:gravity="center"/>

    <Button
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_info_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_lvl1"
        android:text="@string/exit_anonymous" />
</RelativeLayout>