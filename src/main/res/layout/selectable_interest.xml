<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/interest_item"
    android:background="@drawable/interest_frame"
    android:layout_margin="@dimen/margin_lvlhalf"
    android:padding="@dimen/border_thin">

    <com.shaya.poinila.android.presentation.view.costom_view.AspectRatioImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        app:aspectRatioEnabled="true"
        app:aspectRatio="0.7"
        app:dominantMeasurement="width"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/image"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginTop="@dimen/margin_lvlhalf"
        android:layout_marginRight="@dimen/margin_lvlhalf"
        android:layout_marginBottom="@dimen/margin_lvlhalf">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/medium_text.boulder_text"
            android:id="@+id/text"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/checkbox_my_sin"
            android:id="@+id/checkbox"
            android:checked="false" />

    </LinearLayout>


</RelativeLayout>