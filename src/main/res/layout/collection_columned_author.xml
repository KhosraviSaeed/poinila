<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--Image (avatar, post_item ... ) -->
    <de.hdodenhof.circleimageview.CircleImageView
        style="@style/columnedImage.medium"
        android:layout_alignParentRight="true"
        android:id="@+id/image"
        android:layout_marginLeft="@dimen/margin_lvl1"
        />

    <!--Title (owner name, commenter, post_item name) -->
    <TextView
        style="@style/columnedItem_title_mediumFont"
        android:id="@+id/title"
        android:layout_toLeftOf="@+id/image"
        />

    <!--Subtitle (Commenter url) -->
    <TextView
        android:id="@+id/subtitle"
        style="@style/columnedItem_title_smallFont"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/title"
        />
</RelativeLayout>