<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:paddingTop="@dimen/margin_lvl1"
    android:paddingBottom="@dimen/margin_lvl1"
    android:gravity="center_vertical">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <!--Favorite-->
    <TextView
        android:id="@+id/fave_num"
        style="@style/stat_big_number"
        android:layout_marginRight="@dimen/margin_lvl1"/>

    <ImageButton
        android:id="@+id/fave_icon"
        style="@style/stat_big_icon"
        android:background="@drawable/favorite_selector"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <!--Comment-->
    <TextView
        android:id="@+id/comment_num"
        style="@style/stat_big_number"
        android:layout_marginRight="@dimen/margin_lvl1"/>
    <ImageButton
        android:id="@+id/comment_icon"
        style="@style/stat_big_icon"
        android:background="@drawable/comment_selector"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />

    <!--repost-->
    <TextView
        android:id="@+id/repost_num"
        style="@style/stat_big_number"
        android:layout_marginRight="@dimen/margin_lvl1"/>

    <ImageButton
        android:id="@+id/repost_icon"
        style="@style/stat_big_icon"
        android:background="@drawable/repost_selector"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
