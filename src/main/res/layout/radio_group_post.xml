<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:orientation="horizontal"
    android:weightSum="3"
    android:gravity="center_vertical"
    android:id="@+id/post_type_container"
    android:layout_marginBottom="@dimen/margin_lvl1">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"/>

    <!--Text Type-->
    <TextView
        android:id="@+id/text_type"
        style="@style/wrap_wrap.large_text.boulder_text"
        android:text="@string/text"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_radio_btn"
        style="@style/radio_button_my_sin"
        android:checked="false" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"/>

    <!--Image Type-->
    <TextView
        style="@style/wrap_wrap.large_text.boulder_text"
        android:text="@string/image"
        android:id="@+id/image_type"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_radio_btn"
        style="@style/radio_button_my_sin"
        android:checked="true" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"/>
</RadioGroup>