<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!--material backward compatibility-->
        <item name="colorPrimary">@color/flamingo</item>
        <!--<item name="colorPrimaryDark">#E64A19</item>-->
        <item name="colorAccent">@color/my_sin</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="actionMenuTextColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/boulder</item>
        <item name="colorControlNormal">?attr/actionMenuTextColor</item>
        <item name="dialogPreferredPadding">24dp</item>
        <item name="android:textAppearanceButton">@android:style/TextAppearance.Widget.Button</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_Dialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <!--<style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>-->

    <style name="TextInputLayoutTheme" parent="AppTheme">
        <item name="colorControlNormal">#3200FF</item> <!--action bar arrow color-->
        <item name="colorControlActivated">@color/ponila_green</item> <!--floating hint-->
        <item name="colorControlHighlight">#FF00FF</item> <!--for ripple effect-->
    </style>

    <style name="RatingTheme" parent="AppTheme">
        <item name="android:borderlessButtonStyle">@style/ratingButtonStyle</item>
    </style>
    <style name="ratingButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:colorPressedHighlight">@color/my_sin</item>
    </style>

    <style name="AskIfUserLikeAppButtonTheme" parent="@style/ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">@color/white</item> <!--text color-->
        <item name="colorButtonNormal">?attr/colorPrimaryDark</item> <!--pressed state color-->
    </style>

    <style name="AskIfUserRateAppButtonTheme" parent="@style/ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimaryDark">@color/sea_buckthorn</item>
        <item name="colorAccent">@color/white</item> <!--text color-->
        <item name="colorButtonNormal">?attr/colorPrimaryDark</item> <!--pressed state color-->
    </style>



    <style name="full_image_activity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:actionBarStyle">@style/actionbar_black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>


        <!-- colorPrimary is used, for instance, for the default ActionBar
       (but not Toolbar) background.
        We specify the same color for the toolbar background in
        toolbar.xml.. -->
        <item name="colorPrimary">@color/black</item>

        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <!--<item name="colorPrimaryDark">@color/</item>-->

        <!-- colorAccent is used as the default value for
             colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/my_sin</item>
    </style>

    <style name="actionbar_black" parent="Widget.AppCompat.ActionBar">
        <!-- android:textColorPrimary is the  color of the title text
       in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>

        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

        <!-- android:actionMenuTextColor is the color of the text of
              action (menu) items in the Toolbar, at least in the
              Theme.AppCompat theme.
              For some reason, they already get the textColorPrimary
              when running on API 21, but not on older versions of
              Android, so this is only necessary to support older
              Android versions.-->
        <item name="actionMenuTextColor">@color/white</item>
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- This would set the toolbar's background color,
              but setting this also changes the popup menu's background,
              even if we define popupTheme for our <Toolbar> -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="switch_Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/my_sin</item>
        <!-- colorPrimary is used for the default action bar background -->
        <!--<item name="colorPrimary">@color/my_sin</item>-->

        <!-- colorPrimaryDark is used for the status bar -->
        <!--<item name="colorPrimaryDark">@color/west_side</item>-->

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <!--<item name="colorAccent">@color/accent</item>-->
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>
    
    <!--<style name="setting_theme" parent="Theme">
        <item name="sw"
    </style>-->
</resources>
